<odoo>
    <data>
        <record id="yama_so_reports_form_inherit22" model="ir.ui.view">
            <field name="name">yama.so.reports.form.inherit22</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!--                <xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="after">-->
                <!--                    <field name="is_subtotal_merge" optional="show"/>-->
                <!--                </xpath>-->
                <xpath expr="//sheet/notebook/page[@name='order_lines']/field[@name='order_line']" position="before">
                    <field name="select_all"/>
                </xpath>

                <!-- اضف الفيلد بعد payment_term_id -->
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="warranty"/>
